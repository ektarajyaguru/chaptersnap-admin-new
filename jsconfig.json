{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/src/*"
      ],
      "@/components/*": [
        "app/src/components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/lib/components/*": [
        "lib/components/*"
      ],
      "@/lib/components/ui/*": [
        "lib/components/ui/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/styles/*": [
        "app/styles/*"
      ],
      "@/assets/*": [
        "app/src/assets/*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
